<!-- 这个是注册页面的模板文件 -->
<!DOCTYPE html>
<html>

<head>
    <title>
        注册页面
    </title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            padding: 60px 0px 0px 40px;
            background-color: #79cece;
        }
        
        ._label {
            font-size: 18px;
            font-weight: bold;
        }
        
        .center {
            margin: 0 auto;
            width: 100%;
            text-align: center
        }
    </style>
</head>

<body>
    <div class='container'>
        <form id="regForm" method="post" action="/register">
            <h2>欢迎来到HelloNodeJS 注册页面</h2>
            <hr/>
            <div class='container'>
                <div class='center'>
                    <label for="username" class='_label '>用户</label>
                    <input id="username" class='input-xlarge' type="text" placeholder="输入注册用户名" name="username" />
                    <br/>
                    <label for="password" class='_label'>密码</label>
                    <input id="password" class='input-xlarge' type="password" placeholder="用户密码" name="password" />
                    <br/>
                    <button type="submit" class='btn btn-success'>注册</button>
                </div>
            </div>
        </form>
    </div>
</body>

</html>