<!-- 这个是用户主页的模板文件 -->
<!DOCTYPE html>
<html>

<head>
    <title>
        用户页面
    </title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            padding: 60px 0px 0px 40px;
            background-color: #79cece;
        }
        
        .myUl {
            . width: 100%
        }
        
        .myUl li {
            text-align: center;
            width: 32%;
            margin-right: 10px;
            background-color: #D6E8FA;
            list-style-type: none;
            float: left;
           
            margin-bottom: 10px;
        }
        
        .myUl li p {
            color: #000000;
            font-size: 25px;
            font-weight: bold;
        }
        
        .myUl li span {
            text-align: left
        }
        
        .myUl li label {
            text-indent: 20px;
            line-height: 20px;
            font-family: '簡體'
        }
    </style>
</head>

<body>
    <div class='container'>
        <h2>欢迎来到HelloNodeJS 用户页面</h2>
        <hr/>
        <h3><span>我的用户名是：<%= username %></span></h3>
    </div>
    <hr />
    <div class='container'>
        <form method='post' class='form-horizontal' role='form' action='/publish'>
            <input type="text" name="title" class="form-control" placeholder="标题">
            <textarea name="content" class="form-control" rows="5" placeholder='发布内容'></textarea>
            <input type="submit" class="btn btn-primary" value="提交">
            <input type="reset" class="btn btn-default" value="重置">
        </form>
        <h5>我所发布的消息</h5>
        <hr/>
        <div class='container'>
            <ul class='myUl'>
                    <% if(mess != ''){ %>
                    <%  mess.forEach(function(item,index){ %>
                        <li>
                            <p>
                                <%= item.title %>
                            </p>
                            <label>
                                <%= item.content %>
                            </label>
                            <p>
                                <a href='./delete?id=<%= item.id%>' class='btn btn-danger'>删除</a>
                                <a href='./update?id=<%= item.id%>' class='btn btn-info'>修改</a>
                            </p>
                        </li>
                    <% }) %>
                    <%}%>

            </ul>
        </div>
    </div>
</body>

</html>